      fx:controller="ifpr.pgua.eic.javafx.Exemplo05.Controle"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx-padding: 10;
                  -fx-border-style: solid inside;
                  -fx-border-width: 2;
                  -fx-border-insets: 5;
                  -fx-border-radius: 5;
                  -fx-border-color: blue;">

    <Label fx:id="lbRelogio" text="Relogio..." />


    <HBox>
        <ProgressBar fx:id="pbProgresso1" progress="0"/>
        <Button fx:id="btControle1" text="Inicia" onAction="#controle1"/>
    </HBox>

    <HBox>
        <ProgressBar fx:id="pbProgresso2" progress="0"/>
        <Button fx:id="btControle2" text="Inicia" onAction="#controle2"/>
    </HBox>

    <HBox>
        <ProgressBar fx:id="pbProgresso3" progress="0"/>
        <Button fx:id="btControle3" text="Inicia" onAction="#controle3"/>
    </HBox>





</VBox>
